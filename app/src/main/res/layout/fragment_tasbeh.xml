<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/main_background">

    <View
        android:id="@+id/head_of_seb"
        android:layout_width="73sp"
        android:layout_height="105sp"
        android:layout_marginLeft="190sp"
        android:layout_marginTop="15sp"
        android:background="@drawable/head_sebha_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/body_of_seb"
        android:layout_width="232sp"
        android:layout_height="234sp"
        android:layout_marginLeft="90sp"
        android:layout_marginTop="93sp"
        android:background="@drawable/body_sebha_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tasbehat_count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/body_of_seb"
        android:text="@string/number_tasbehat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="25sp"
        android:layout_marginTop="43sp"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/recatngle_tasbeh_count"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:background="@drawable/rectangle_3"
        app:layout_constraintWidth_percent="0.16"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintTop_toBottomOf="@id/tasbehat_count_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="26sp"
        />

    <TextView
        android:id="@+id/tasbeh_count_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:text="0"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/recatngle_tasbeh_count"
        app:layout_constraintEnd_toEndOf="@id/recatngle_tasbeh_count"
        app:layout_constraintStart_toStartOf="@id/recatngle_tasbeh_count"
        app:layout_constraintTop_toTopOf="@id/recatngle_tasbeh_count" />
    <View
        android:id="@+id/azkar_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recatngle_tasbeh_count"
        android:background="@drawable/azkarbackground"
        app:layout_constraintHeight_percent="0.058"
        app:layout_constraintWidth_percent="0.3333"
        android:layout_marginTop="22sp"
        />
    <TextView
        android:id="@+id/azkar_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/azkar_background"
        app:layout_constraintEnd_toEndOf="@id/azkar_background"
        app:layout_constraintTop_toTopOf="@id/azkar_background"
        app:layout_constraintBottom_toBottomOf="@id/azkar_background"
        android:text="@string/azkar"
        android:textSize="25sp"
        android:textColor="@color/white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>